# delete all containers
function docker-rm-containers() { for i in $(docker ps -a | awk '{print$1}' | tail +2);do;docker rm $i;done; }

# delete all images
function docker-rm-images() { for i in $(docker images | awk '{print$3}' | tail +2);do;docker rmi $i;done; }

function tillerless() {
    helm tiller run ${TN} -- $@
}

function restart_replicaset() {
	kubectl scale --replicas=0 $1 && kubectl scale --replicas=1 $1
}

function delete_branches() {
	for b in $(git branch -v | awk '{print$1}' | grep -v -E "^master$|\*"); do
		git branch -D $b;
	done
}

# shell pod
function sp() {
	pod=$1
	ns=$2
	if [[ -z $ns ]]; then
		kubectl exec -it $pod /bin/sh
	else
    kubectl -n $ns exec -it $pod /bin/sh
	fi
}


function runTimes() {
	number=${1}
	shift
	for i in {1..${number}}; do
		"$@";
	done
}

function syncNvim() {
	cd $HOME/code/github/setup-my-linux
	git stash
	git switch main

	cp $HOME/.config/nvim/init.vim ./nvim/init.vim

	BRANCH="sync-nvim"
	git branch -D $BRANCH || true
	git checkout -b $BRANCH
	git add nvim/init.vim
	git commit -m "sync nvim"
	git push origin $BRANCH
	git switch main
	git branch -D $BRANCH
	git pull
	git stash pop
}
function syncZsh() {
	cd $HOME/code/github/setup-my-linux
	git switch main
	git stash

	cp $HOME/.zshrc ./zsh/zshrc.j2

	BRANCH="sync-zsh"
	git branch -D $BRANCH || true
	git checkout -b $BRANCH
	git add zsh/zshrc.j2
	git commit -m "sync zsh"
	git push origin $BRANCH
	git switch main
	git branch -D $BRANCH
	git pull
	git stash pop
}
